#include <stdio.h>
int main()
{
    int testInteger;
    printf("Enter an integer: ");
    scanf("%d", &testInteger);  
    printf("Number = %d",testInteger);
    
    return 0;
}


|
#include <stdio.h>

int main(){
    float a;
    double b;

    printf("Enter a float number: ");
    scanf("%f", &a);
    printf("Enter another float number:");
    scanf("%lf", &b);

    printf("Number 1: %.1f" "\n", a);
    printf("Nubmer 2: %.2lf", b);

    return 0;
}



|
#include <stdio.h>
int main()
{
    char chr;
    printf("Enter a character: ");
    scanf("%c",&chr);     
    printf("You entered %c.", chr);  
    
    return 0;
}   



|
  int	%d
  char	%c
  float	%f
  double	%lf
  short int	%hd
  unsigned int	%u
  long int	%li
  long long int	%lli
  unsigned long int	%lu
  unsigned long long int	%llu
  signed char	%c
  unsigned char	%c
  long double	%Lf
